# ~/.gitconfig
#
# PURPOSE
# -------
# Shared Git configuration.
#
# This file contains portable settings used across macOS and Linux.
# Identity and machine-specific settings live in ~/.gitconfig.local

# -------------------------------------------------------------------
# Core behaviour
# -------------------------------------------------------------------

[core]
  excludesfile = ~/.gitignore_global
  attributesfile = ~/.gitattributes
  pager = delta

[color]
  ui = auto

# -------------------------------------------------------------------
# Defaults & safety
# -------------------------------------------------------------------

[init]
  defaultBranch = main

[fetch]
  prune = true
  pruneTags = true

[pull]
  rebase = false

[push]
  default = simple
  autoSetupRemote = true

[rebase]
  autoStash = true

# -------------------------------------------------------------------
# Diff improvements
# -------------------------------------------------------------------

[diff]
  algorithm = histogram
  colorMoved = default
  tool = vimdiff

[interactive]
  diffFilter = delta --color-only

[delta]
  features = side-by-side line-numbers decorations
  syntax-theme = default
  navigate = true

[difftool]
  prompt = false

[difftool "vimdiff"]
  cmd = vimdiff "$LOCAL" "$REMOTE"

# -------------------------------------------------------------------
# Aliases (high-signal only)
# -------------------------------------------------------------------

[alias]
  st = status -sb
  co = checkout
  br = branch
  lg = log --oneline --decorate --graph --all
  last = log -1 HEAD

# -------------------------------------------------------------------
# Git LFS
# -------------------------------------------------------------------

[filter "lfs"]
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f

# -------------------------------------------------------------------
# macOS: SSH commit signing via 1Password
# -------------------------------------------------------------------
# Note: Actual signingkey is set in ~/.gitconfig.local

[gpg]
  format = ssh

[gpg "ssh"]
  program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
  allowedSignersFile = ~/.ssh/allowed_signers

[commit]
  gpgsign = true

# -------------------------------------------------------------------
# Local overrides (machine-specific, not in git)
# -------------------------------------------------------------------

[include]
  path = ~/.gitconfig.local
