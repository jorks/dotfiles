# EditorConfig
#
# PURPOSE
# -------
# Global EditorConfig defaults for my development environment.
#
# This file defines baseline formatting rules that apply across projects
# unless overridden by a project-specific .editorconfig.
#
# Goals:
# - Consistent indentation and whitespace
# - Clean, low-noise diffs
# - Minimal editor guesswork

root = true

# -------------------------------------------------------------------
# Defaults (safe, boring)
# -------------------------------------------------------------------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = off

# -------------------------------------------------------------------
# Data / config formats
# -------------------------------------------------------------------
[*.{yml,yaml}]
indent_size = 2

[*.toml]
indent_size = 2

[*.json]
indent_size = 2

# -------------------------------------------------------------------
# Shell scripts
# -------------------------------------------------------------------
[*.{sh,bash,zsh}]
indent_size = 2

# -------------------------------------------------------------------
# Python
# -------------------------------------------------------------------
[*.py]
indent_size = 4

# -------------------------------------------------------------------
# Infra as Code
# -------------------------------------------------------------------
[*.tf]
indent_size = 2

[*.tfvars]
indent_size = 2

[*.{yaml,yml}.tpl]
indent_size = 2

[template.yaml]
indent_size = 2

# -------------------------------------------------------------------
# Markup & frontend
# -------------------------------------------------------------------
[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{html,js,css}]
indent_size = 2

# -------------------------------------------------------------------
# PHP
# -------------------------------------------------------------------
[*.php]
indent_size = 2

# -------------------------------------------------------------------
# Makefiles (must be tabs)
# -------------------------------------------------------------------
[Makefile]
indent_style = tab
