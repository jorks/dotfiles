# Dotfiles project EditorConfig
#
# PURPOSE
# -------
# Formatting rules for this dotfiles repository only.
#
# This repo is config-heavy and template-heavy. Most files are:
# - NOT whitespace-sensitive
# - Read far more often than they are written
#
# Goals:
# - Consistent indentation
# - Clean diffs
# - No editor guesswork
#
# This file does NOT affect the managed dotfiles installed by chezmoi.

root = true

# -------------------------------------------------------------------
# Defaults (safe for almost everything in this repo)
# -------------------------------------------------------------------
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = off

# -------------------------------------------------------------------
# INI-style configs
# (gitconfig, ssh config, inputrc, nanorc, etc.)
# -------------------------------------------------------------------
[{*.ini,*.cfg,*.conf,gitconfig,inputrc,nanorc}]
indent_size = 2

# -------------------------------------------------------------------
# Chezmoi templates
# -------------------------------------------------------------------
[*.tmpl]
indent_size = 2

# -------------------------------------------------------------------
# Shell scripts
# -------------------------------------------------------------------
[*.{sh,bash,zsh}]
indent_size = 2

# -------------------------------------------------------------------
# Data / config formats
# -------------------------------------------------------------------
[*.{yml,yaml}]
indent_size = 2

[*.toml]
indent_size = 2

[*.json]
indent_size = 2

# -------------------------------------------------------------------
# Homebrew
# -------------------------------------------------------------------
[Brewfile*]
indent_size = 2

# -------------------------------------------------------------------
# Documentation
# -------------------------------------------------------------------
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# -------------------------------------------------------------------
# Safety: Makefiles must use tabs
# -------------------------------------------------------------------
[Makefile]
indent_style = tab
